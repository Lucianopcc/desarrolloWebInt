<script>
document.addEventListener('DOMContentLoaded', () => {
  const decreaseBtn = document.getElementById('decrease-btn');
  const increaseBtn = document.getElementById('increase-btn');
  const qtyEl       = document.getElementById('quantity');
  const totalEl     = document.getElementById('total-price');

  const unitPrice = parseFloat(totalEl.dataset.unitPrice);
  const stockDisponible = parseInt(qtyEl.dataset.stock, 10);

  function updateTotal() {
    const qty = parseInt(qtyEl.textContent, 10);
    const newTotal = (unitPrice * qty).toFixed(2);
    totalEl.textContent = 'S/' + newTotal;
  }

  function updateButtons(qty) {
    decreaseBtn.disabled = qty <= 1;
    increaseBtn.disabled = qty >= stockDisponible;
  }

  increaseBtn.addEventListener('click', () => {
    let qty = parseInt(qtyEl.textContent, 10);
    if (qty < stockDisponible) {
      qty += 1;
      qtyEl.textContent = qty;
      updateTotal();
      updateButtons(qty);
    }
  });

  decreaseBtn.addEventListener('click', () => {
    let qty = parseInt(qtyEl.textContent, 10);
    if (qty > 1) {
      qty -= 1;
      qtyEl.textContent = qty;
      updateTotal();
      updateButtons(qty);
    }
  });

  // Inicializar estado de botones al cargar
  updateButtons(parseInt(qtyEl.textContent, 10));
});



  const addToCartBtn = document.getElementById('add-to-cart-btn');
const buyNowBtn = document.getElementById('buy-now-btn');
const quantityElement = document.getElementById('quantity');
const productoId = parseInt(document.getElementById('producto-id').value); // ID como número

// Añadir al carrito sin redirigir
addToCartBtn.addEventListener('click', () => {
  const cantidad = parseInt(quantityElement.textContent);

  fetch('/carrito/agregar', {
    method: 'POST',
    headers: {
      'Content-Type': 'application/json'
    },
    body: JSON.stringify({ productoId, cantidad })
  })
  .then(res => res.json())
  .then(data => {
    alert('Producto añadido al carrito');
  })
  .catch(error => {
    console.error('Error al añadir al carrito:', error);
  });
});

// Comprar y redirigir al carrito
buyNowBtn.addEventListener('click', () => {
  const cantidad = parseInt(quantityElement.textContent);

  fetch('/carrito/agregar', {
    method: 'POST',
    headers: {
      'Content-Type': 'application/json'
    },
    body: JSON.stringify({ productoId, cantidad })
  })
  .then(res => res.json())
  .then(data => {
    window.location.href = '/carrito';
  })
  .catch(error => {
    console.error('Error al procesar la compra:', error);
  });
});

</script>





